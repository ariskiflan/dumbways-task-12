<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Website - {{titlePage}}</title>
    <link rel="stylesheet" href="assets/css/register.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid px-4 py-4">
        <a class="navbar-brand" href="/"><img
            class="logo"
            src="assets/img/dwlogo.png"
            alt="dumbways logo"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse ms-5 me-5" id="navbarNav">
          <ul class="navbar-nav grid gap-4">
            {{#if handleLogin}}
              <li class="nav-item">
                <a
                  class="nav-link active fs-2 fw-medium"
                  aria-current="page"
                  href="/"
                >Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-project">Add
                  project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-testimonials">My
                  Testimonials</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="#">Hallo
                  {{user}}</a>
              </li>

              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="#">Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link active fs-2 fw-medium"
                  aria-current="page"
                  href="/"
                >Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-testimonials">My
                  Testimonials</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link fs-2 fw-medium"
                  href="/register"
                >Registers</a>
              </li>

              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/login">Login</a>
              </li>
            {{/if}}

          </ul>
        </div>

        <a
          class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0 d-none d-lg-block"
          href="/contact"
          role="button"
        >Contact Me</a>
      </div>
    </nav>

    <main class="main">
      <section class="contact-section">
        <h1 class="contact-heading">REGISTER YOUR ACCOUNT</h1>

        <form class="" method="POST" action="/register">
          <div class="mb-3">
            <label for="exampleInputName" class="form-label fs-2">Name</label>
            <input
              name="name"
              type="text"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputName"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail" class="form-label fs-2">Email</label>
            <input
              name="email"
              type="email"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputEmail"
            />
          </div>
          <div class="mb-3">
            <label
              for="exampleInputNumber"
              class="form-label fs-2"
            >Password</label>
            <input
              name="password"
              type="password"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputNumber"
            />
          </div>

          <div class="d-flex justify-content-end">
            <button
              type="submit"
              class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0"
              role="button"
            >
              Submit
            </button>
          </div>
        </form>
      </section>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>