<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>contact</title>
    <link rel="stylesheet" href="assets/css/contact.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid px-4 py-4">
        <a class="navbar-brand" href="/"><img
            class="logo"
            src="assets/img/dwlogo.png"
            alt="dumbways logo"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse ms-5 me-5" id="navbarNav">
          <ul class="navbar-nav grid gap-4">
            <li class="nav-item">
              <a
                class="nav-link fs-2 fw-medium"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-2 fw-medium" href="/my-project">Add project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-2 fw-medium" href="/my-testimonials">My
                Testimonials</a>
            </li>
          </ul>
        </div>
        <a
          class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0 d-none d-lg-block"
          href="/contact"
          role="button"
        >Contact Me</a>
      </div>
    </nav>

    <main class="main">
      <section class="contact-section">
        <h1 class="contact-heading">GET IN TOUCH</h1>

        <form onsubmit="submitData(event)">
          <div class="mb-3">
            <label for="exampleInputName" class="form-label fs-2">Name</label>
            <input
              type="text"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputName"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail" class="form-label fs-2">Email</label>
            <input
              type="email"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputEmail"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputNumber" class="form-label fs-2">Phone Number</label>
            <input
              type="text"
              class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              id="exampleInputNumber"
            />
          </div>

          <div class="mb-3">
            <label class="form-label fs-2">Subject</label>
            <select
              class="form-select fs-4 py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
              aria-label="Default select example"
              id="select"
            >
              <option value="1">Frontend Developer</option>
              <option value="2">Backend Developer</option>
              <option value="3">fullstack Developer</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="floatingTextarea2" class="form-label fs-2">Your Message</label>
            <div class="form-floating">
              <textarea
                class="form-control shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                placeholder="Leave a comment here"
                id="floatingTextarea2"
                style="height: 100px"
              ></textarea>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button
              class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0"
              role="button"
            >
              Submit
            </button>
          </div>
        </form>
      </section>
    </main>

    <script src="assets/script/contact.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>